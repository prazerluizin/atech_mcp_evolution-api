# Evolution API Configuration
# Copy this file to .env and update with your actual values

# Required: Evolution API base URL
EVOLUTION_URL=https://your-evolution-api.com

# Required: Global API key for Evolution API
EVOLUTION_API_KEY=your-global-api-key

# Optional: MCP Server Configuration
MCP_SERVER_NAME=evolution-api-mcp
MCP_SERVER_VERSION=1.0.0

# Optional: HTTP Client Configuration
HTTP_TIMEOUT=30000
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
MAX_RETRY_DELAY=10000

# Optional: Logging Configuration
LOG_LEVEL=info
NODE_ENV=production

# Development Configuration (uncomment for local development)
# EVOLUTION_URL=http://localhost:8080
# EVOLUTION_API_KEY=dev-api-key
# LOG_LEVEL=debug
# NODE_ENV=development